def read_text(text):
    """Reads the given text using a text-to-speech engine in English."""
    engine = pyttsx3.init()

    # Get available voices
    voices = engine.getProperty('voices')

    # Try to find an English female voice
    female_english_voice = None
    for voice in voices:
        # Check for English (en) in voice ID and female characteristics
        if ('en' in voice.id.lower() or 'english' in voice.name.lower()) and \
           ('female' in voice.name.lower() or 'zira' in voice.id.lower()):
            female_english_voice = voice.id
            break

    # If no English female found, try any English voice
    if not female_english_voice:
        for voice in voices:
            if 'en' in voice.id.lower() or 'english' in voice.name.lower():
                female_english_voice = voice.id
                break

    # Set the voice if found, otherwise use default
    if female_english_voice:
        engine.setProperty('voice', female_english_voice)
        print(f"Using voice: {female_english_voice}")
    else:
        print("No English voice found - using default voice")
        engine.setProperty('voice', voices[0].id)

    engine.setProperty('rate', 150)  # Set speech rate
    engine.say(text)
    engine.runAndWait()
